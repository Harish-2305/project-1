#:import utils kivy.utils
<Button>
    font_size:32
    size_hint:(0.2,0.2)
    background_color:utils.get_color_from_hex("#B5B7B7")
<calculatewid>
    BoxLayout:
        orientation:"vertical"
        size:(root.width,root.height)
        TextInput:
            id:input
            text:"0"
            halign:"right"
            font_size:65
            size_hint:(1,0.19)
        GridLayout:
            cols:4
            row:5
            Button:
                text:"%"
                background_color:utils.get_color_from_hex("#555756")
                on_press:root.math_sign("%")
            Button:
                text:"CE"
                background_color:utils.get_color_from_hex("#555756")
                on_press:root.clear()
            Button:
                id:clear
                text:"C"
                background_color:utils.get_color_from_hex("#555756")
                on_press:root.remove()
            Button:
                text:"/"
                background_color:utils.get_color_from_hex("#555756")
                on_press:root.math_sign("/")
            Button:
                text:"7"
                on_press:root.button_press("7")
            Button:
                text:"8"
                on_press:root.button_press("8")
            Button:
                text:"9"
                on_press:root.button_press("9")
            Button:
                text:"*"
                background_color:utils.get_color_from_hex("#555756")
                on_press:root.math_sign("*")
            Button:
                text:"4"
                on_press:root.button_press("4")
            Button:
                text:"5"
                on_press:root.button_press("5")
            Button:
                text:"6"
                on_press:root.button_press("6")
            Button:
                text:"-"
                background_color:utils.get_color_from_hex("#555756")
                on_press:root.math_sign("-")
            Button:
                text:"1"
                on_press:root.button_press("1")
            Button:
                text:"2"
                on_press:root.button_press("2")
            Button:
                text:"3"
                on_press:root.button_press("3")
            Button:
                text:"+"
                background_color:utils.get_color_from_hex("#555756")
                on_press:root.math_sign("+")
            Button:
                text:"+/-"
                on_press:root.neg()
            Button:
                text:"0"
                on_press:root.button_press("0")
            Button:
                text:"."
                on_press:root.dot()
            Button:
                text:"="
                on_press:root.equal()
